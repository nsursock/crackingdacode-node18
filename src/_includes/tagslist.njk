
<div
  x-data="{ showTag: false }"
  class="md:h-screen mt-10"
  x-intersect.once="showTag = true; $el.classList.remove('md:h-screen')">
  {# <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Categories</h3> #}
  <div class=" mt-5 sm:mt-8 sm:justify-center flex flex-wrap">
  {% set years = collections.postsByYear %}
  {% for year in years %}
    <div class="mt-3  mr-2 ">
      <a
        href="/archive/{{ year[0] | slug }}"
        class="w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
          text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:text-lg dark:text-indigo-300 dark:bg-indigo-900
          dark:hover:bg-indigo-800">
        {{ year[0] }}
      </a>
    </div>
  {% endfor %}
</div>
  <div class="sm:flex sm:justify-center flex flex-wrap">
    {% for tag in collections.tagList %}
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
      <div class="mt-3 mr-2" x-show="showTag" x-transition:enter="animate-jello">
        <a
          href="/tags/{{ tag | slug }}"
          class=" w-full flex items-center justify-center px-5 py-2 border border-transparent text-base font-medium rounded-md
            dark:text-indigo-300 dark:bg-indigo-900 dark:hover:bg-indigo-800 text-indigo-700 bg-indigo-100 hover:bg-indigo-200
            md:text-lg ">
          {{ tag }}
        </a>
      </div>
    {% endfor %}
  </div>
</div>