<div
    class="h-screen w-screen bg-white relative overflow-hidden rounded-lg"
    x-data="{ isAnimated: false, togglePanel() { this.isAnimated = !this.isAnimated } }">
    <div
        class="login bg-white absolute top-0 left-0 h-full w-1/2 flex justify-center items-center transition-all duration-700
            ease-in-out z-20"
        :class="isAnimated ? 'translate-x-full opacity-0' : ''">
        {% include './LoginForm.njk' %}
    </div>
    <div
        class="signup absolute top-0 left-0 h-full w-1/2 flex justify-center items-center transition-all duration-700
            ease-in-out"
        :class="isAnimated ? 'translate-x-full opacity-100 z-50 animate-show' : 'opacity-0 z-10'">
        <div class="h-full w-full flex justify-center items-center">
            {% include './SignupForm.njk' %}
        </div>
    </div>
    <div
        class="overlay-container absolute top-0 left-1/2 w-1/2 h-full overflow-hidden transition-transform duration-700
            ease-in-out z-100"
        :class="isAnimated ? '-translate-x-full' : ''">
        <div
            class="overlay bg-gradient-to-r from-blue-800 via-purple-800 to-indigo-800 relative -left-full h-full w-[200%] transform
                transition-transform duration-700 ease-in-out"
            :class="isAnimated ? 'translate-x-1/2' : 'translate-x-0'">
            <div
                class="overlay-left w-1/2 h-full absolute flex justify-center items-center top-0 transform -translate-x-[20%]
                    transition-transform duration-700 ease-in-out"
                :class="isAnimated ? 'translate-x-0' : '-translate-x-[20%]'">
                {% include './LeftOverlayContent.njk' %}
            </div>
            <div
                class="overlay-right w-1/2 h-full absolute flex justify-center items-center top-0 right-0 transform transition-transform
                    duration-700 ease-in-out"
                :class="isAnimated ? 'translate-x-[20%]' : 'translate-x-0'">
                {% include './RightOverlayContent.njk' %}
            </div>
        </div>
    </div>
</div>