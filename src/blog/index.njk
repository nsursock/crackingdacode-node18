                class="mr-3 h-5 w-5 text-gray-400"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-hidden="true">
                <path
                  fill-rule="evenodd"
                  d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1
                    1 0 010 1.414z"
                  clip-rule="evenodd"/>
              </svg>
              Prev
            </a>
          {% endif %}
          {% if page.url != pagination.href.first %}
            <a href="{{ pagination.href.first }}#posts" class="ml-2 border-b-2 border-transparent pb-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
              First
            </a>
          {% endif %}
        </div>
        <div class="hidden md:-mb-px md:flex">
          {% for page_entry in pagination.pages %}
            {%- set page_url = pagination.hrefs[loop.index0] -%}
            {% if loop.index0 == +page.url.split('/')[2] -4 %}
            <a href="{{ pagination.hrefs[+page.url.split('/')[2] -3] }}" class="border-transparent text-gray-500 border-b-2 pb-4 px-4 inline-flex items-center text-sm font-medium"> ... </a>
            {% endif %}
            {% if loop.index0 >= +page.url.split('/')[2] -3 and loop.index0 <= +page.url.split('/')[2] +3 %}
            <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:text-gray-700
            hover:border-gray-300" -->
            <a href="{{ page_url }}#posts" {% if page.url == page_url %} class="border-indigo-500 text-indigo-600 border-b-2 pb-4 px-4 inline-flex items-center text-sm font-medium" {% endif %} class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 border-b-2 pb-4 px-4 inline-flex items-center text-sm font-medium" aria-current="page">
              {{ loop.index }}
            </a>
            {% endif %}
            {% if loop.index0 == +page.url.split('/')[2] +4 %}
            <a href="{{ pagination.hrefs[+page.url.split('/')[2] +3] }}" class="border-transparent text-gray-500 border-b-2 pb-4 px-4 inline-flex items-center text-sm font-medium"> ... </a>
            {% endif %}
          {% endfor %}
        </div>
        <div class="-mb-px w-0 flex-1 flex ">
          {% if page.url != pagination.href.last %}
            <a href="{{ pagination.href.last }}#posts" class="mr-2 border-b-2 border-transparent pb-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Last
            </a>
          {% endif %}
          {% if pagination.href.next %}
            <a href="{{ pagination.href.next }}#posts" class="border-b-2 border-transparent pb-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
              Next
