        <div class="-mb-px w-0 flex-1 flex justify-end">
          {% if pagination.href.previous %}
            <a
              href="{{ pagination.href.previous }}#posts" class="border-b-2 border-transparent pb-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300">
